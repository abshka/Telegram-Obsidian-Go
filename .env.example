# Telegram API settings (required)
APP_ID=          # Get from my.telegram.org
APP_HASH=        # Get from my.telegram.org
PHONE_NUMBER=    # Your phone number with country code (e.g., +1234567890)

# Session settings
SESSION_NAME=default
SESSION_DIR=.td_session

# Obsidian paths
OBSIDIAN_PATH=   # Main folder for export
MEDIA_SUBDIR=media
USE_ENTITY_FOLDERS=true  # Create subfolders for each chat

# Export targets (comma-separated list of IDs, usernames, or links)
EXPORT_TARGETS=  # e.g., @username,123456789,https://t.me/channelname

# Processing settings
ONLY_NEW=true
MEDIA_DOWNLOAD=true
VERBOSE=true
INTERACTIVE_MODE=true

# Parallelism settings
MAX_WORKERS=4
MAX_PROCESS_WORKERS=2
CONCURRENT_DOWNLOADS=3

# Cache settings
CACHE_SAVE_INTERVAL=30  # In seconds
CACHE_FILE=export_cache.json

# API limits
REQUEST_DELAY=500       # In milliseconds
MESSAGE_BATCH_SIZE=100

# Media optimization
IMAGE_QUALITY=85        # 1-100
VIDEO_CRF=28            # 0-51 (lower is better quality)
VIDEO_PRESET=medium     # ultrafast, superfast, veryfast, faster, fast, medium, slow, slower, veryslow
HW_ACCELERATION=none    # none, nvidia, amd, intel
USE_H265=false          # Use H.265 codec for video
